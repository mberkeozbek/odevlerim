if(isset($_POST['kitapguncelle']))
{
	$kitap_id=$_POST['kitap_id'];
	$kitap_ad = $_POST['kitap_ad'];
	$kitap_yazar = $_POST['kitap_yazar'];
	$kitap_yayınevi = $_POST['kitap_yayınevi'];
	$resimyol = $_POST['resimyol'];

	$kitapguncelle = "UPDATE kitap_list SET kitap_ad ='$kitap_ad',kitap_yazar='$kitap_yazar',kitap_yayınevi='$kitap_yayınevi',kitap_resimyol='$resimyol' WHERE kitap_id='$kitap_id'";


	if (mysqli_query($conn, $kitapguncelle)) 
	{
		header("Location:../mberk/update.php?Güncelleme=ok&id=$kitap_id");  

	}
	else
	{
		header("Location:../mberk/update.php?Güncelleme=no&id=$kitap_id");  
	}


}
